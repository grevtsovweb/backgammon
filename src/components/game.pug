include mixins/svg
include button/button
include product-item/product-item

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="styles/style.css")
        title Backgammon
        meta(name="description", content="Description")
        meta(name="keywords", content="Description")
        link(rel="icon" href="favicon.svg")
        link(rel="preload", href="fonts/MullerBold.woff2", as="font", type="font/woff2", crossorigin="anonymous")
        link(rel="preload", href="fonts/MullerRegular.woff2", as="font", type="font/woff2", crossorigin="anonymous")
        link(rel="preload", href="fonts/MullerMedium.woff2", as="font", type="font/woff2", crossorigin="anonymous")
    body
        #app
            .layout
                .layout__game
                    .layout__game-main
                        .layout__game-table
                            include ../assets/img/table/table.svg
                        .layout__game-info 
                            .layout__game-time
                                .layout__game-time-inner
                                    .layout__game-time-value 12
                            .layout__game-control
                                .layout__game-control-item
                                    button.button-round
                                        .button-round__inner 
                                            +svg('24', '24', 'icon-sound')
                                .layout__game-control-item
                                    button.button-round
                                        .button-round__inner 
                                            +svg('24', '24', 'icon-exit')
                    .layout__game-aside
                        .layout__game-person
                            .avatar 
                                .avatar__image 
                                    .avatar__image-inner
                                            img(src="img/avatar/avatar.jpg", alt="Player Name")
                                .avatar__name Player Name
                                .avatar__points-bar 
                                    include points-bar/points-bar
                        .layout__game-nav
                            .layout__game-bid 
                                .layout__game-bid-inner 
                                    | Ставка
                                    span.layout__game-bid-value 50
                            +button('Удвоить ставку', 'button--full-width')
                        .layout__game-person
                            .avatar 
                                .avatar__image 
                                    .avatar__image-inner
                                            img(src="img/avatar/avatar.jpg", alt="Player Name")
                                .avatar__name Player Name
                                .avatar__points-bar 
                                    include points-bar/points-bar
    