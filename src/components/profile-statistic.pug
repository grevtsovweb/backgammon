include mixins/svg
include button/button
include product-item/product-item
include button/button-icon 
include field/field
include card/card-cube

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="styles/style.css")
        title Backgammon
        meta(name="description", content="Description")
        meta(name="keywords", content="Description")
        link(rel="icon" href="favicon.svg")
    body
        #app
            .layout
                .layout__header 
                    include header/header
                .layout__content
                    .layout__page 
                        h1.layout__page-title Профиль
                        .layout__page-nav
                            include nav-bar/nav-bar-profile
                        .layout__page-data 
                            .product-list
                                .product-list__content
                                    .product-list__profile-statistic
                                        h2.product-list__profile-statistic-title Ваша статистика
                                        .product-list__profile-statistic-content
                                            .product-list__profile-statistic-user
                                                .avatar 
                                                    .avatar__image 
                                                        .avatar__image-inner
                                                            img(src="img/avatar/avatar.jpg", alt="Player Name")
                                                    .avatar__name Player Name
                                                    .avatar__points-bar 
                                                        include points-bar/points-bar
                                            .product-list__profile-statistic-data
                                                .product-list__profile-statistic-game
                                                    | Сыграно игр: 
                                                    span.product-list__profile-statistic-total 57
                                                .table-data
                                                    .table-data__row
                                                        .table-data__item Процент побед
                                                        .table-data__item 27%
                                                    .table-data__row
                                                        .table-data__item ELO
                                                        .table-data__item 0 (- 25)
                                                    .table-data__row
                                                        .table-data__item Сорваные игры
                                                        .table-data__item 2
                                                    .table-data__row
                                                        .table-data__item Количество побед
                                                        .table-data__item 18
                                                    .table-data__row
                                                        .table-data__item Дата регистрации
                                                        .table-data__item 04.05.2021
                                                    .table-data__row
                                                        .table-data__item Часов в игре
                                                        .table-data__item 500 
                                       
