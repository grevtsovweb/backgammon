include mixins/svg
include button/button
include product-item/product-item
include button/button-icon 
include field-count/field-count
include field/field-label

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="styles/style.css")
        title Backgammon
        meta(name="description", content="Description")
        meta(name="keywords", content="Description")
        link(rel="icon" href="favicon.svg")
    body
        #app
            .layout
                .layout__header 
                    include header/header
                .layout__content
                    .layout__page 
                        h1.layout__page-title Столы
                        .layout__page-nav
                            include nav-bar/nav-bar
                        .layout__page-data 
                            .product-list
                                .product-list__content
                                    .product-list__create
                                        form(action="#").form
                                            .form__row.form__row-3
                                                +field-count('Ставка')
                                                +field-count('Время на игру')
                                                +field-count('Количество побед')
                                            .form__row.form__row-3
                                                +field-count('Правила')
                                                +field-count('Время на ход')
                                                +field-label('Пин-код', 'number', 'pin', 'field--dark field--centered')
                                            .form__button-create
                                                +button('Создать стол', 'button--medium')
